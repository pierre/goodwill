<web-app
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">
    <display-name>action-core</display-name>
    <filter>
        <!-- Guice emulates Servlet API with DI -->
        <filter-name>guiceFilter</filter-name>
        <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>guiceFilter</filter-name>
        <url-pattern>/registrar/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>guiceFilter</filter-name>
        <url-pattern>/sink/*</url-pattern>
    </filter-mapping>
    <listener>
        <!-- Jersey insists on using java.util.logging (JUL) -->
        <listener-class>com.ning.jetty.core.listeners.SetupJULBridge</listener-class>
    </listener>
    <listener>
        <!-- Context listener: called at startup time and creates the injector -->
        <listener-class>com.ning.metrics.goodwill.binder.listeners.GoodwillGuiceListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>staticServlet</servlet-name>
        <servlet-class>org.eclipse.jetty.servlet.DefaultServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>staticServlet</servlet-name>
        <url-pattern>/static/*</url-pattern>
    </servlet-mapping>
</web-app>